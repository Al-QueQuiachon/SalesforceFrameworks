<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Survey Responder</masterLabel>
    <description>Component for users to respond to a survey.</description>
    <targets>
        <!-- Primarily intended for Experience Cloud or Salesforce Sites -->
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
        <!-- Also allow placement internally for testing/preview -->
        <target>lightning__AppPage</target>
        <target>lightning__HomePage</target>
        <target>lightning__RecordPage</target> 
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property name="responseId" type="String" label="Response ID" description="The unique response ID from the URL (e.g., {!responseId}). Use a URL parameter binding."/>
            <property name="primaryColor" type="String" default="#22BDC1" label="Primary Color" description="Primary color for theme styling."/>
            <property name="accentColor" type="String" default="#D5DF23" label="Accent Color" description="Accent color for highlights."/>
            <property name="textColor" type="String" default="#1d1d1f" label="Text Color" description="Default text color."/>
            <property name="backgroundColor" type="String" default="#ffffff" label="Background Color" description="Component background color."/>
        </targetConfig>
        <!-- Optional: Target config for internal pages if you want to test with a hardcoded ID -->
         <targetConfig targets="lightning__AppPage, lightning__HomePage, lightning__RecordPage">
            <property name="responseId" type="String" label="Response ID (for Testing)" description="Manually enter a Unique_Response_ID__c for testing purposes."/>
             <property name="primaryColor" type="String" default="#22BDC1" label="Primary Color"/>
            <property name="accentColor" type="String" default="#D5DF23" label="Accent Color"/>
            <property name="textColor" type="String" default="#1d1d1f" label="Text Color"/>
            <property name="backgroundColor" type="String" default="#ffffff" label="Background Color"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle> 