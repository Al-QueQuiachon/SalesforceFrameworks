<aura:component implements="forceCommunity:themeLayout" access="global" description="Enhanced Custom Theme Layout">
    <aura:attribute name="themeHeader" type="Aura.Component[]" required="false"/>
    <aura:attribute name="themeFooter" type="Aura.Component[]" required="false"/>
    <aura:attribute name="themeHero" type="Aura.Component[]" required="false"/>
    <aura:attribute name="componentBackgroundColor" type="String" default="false"/> 
    <aura:attribute name="showHero" type="Boolean" required="false"/>

    <!-- Header Section -->
    <div class="{!'isHeroUnderHeader-' + (v.showHero ? 'true' : 'false') + ' isHeaderPinned-false'}">
        <div role="banner" class="a11y-banner">
            <div class="header">
                {!v.themeHeader}
            </div>
        </div>
        
        <aura:if isTrue="{!v.showHero}">
            <div class="hero">
                {!v.themeHero}
            </div>
        </aura:if>

        <!-- Main Content Area -->
        <div class="mainContentArea">
            {!v.body}
        </div>
    
        <!-- Footer Section -->
        <div class="themeFooter">
            {!v.themeFooter}
        </div>
    </div>

</aura:component>